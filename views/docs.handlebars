<!DOCTYPE html>
<html lang="en">
  {{> head}}

  <link href="/simple-sidebar.css" rel="stylesheet">

  <body onload="smartquotes();">
    <div id="wrapper">
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand">
            <a href="/docs/0">Sch√∂nfinkel Documentation</a>
          </li>
          {{#each docHeaders}}
            {{#if active}}
              <li class="active">
                <a href="/docs/{{docIndex}}">{{title}}</a>
              </li>
            {{else}}
              <li>
                <a href="/docs/{{docIndex}}">{{title}}</a>
              </li>
            {{/if}}
          {{/each}}
        </ul>
      </div>

      <div id="page-content-wrapper" style="padding-top: 0;">
        {{> topRow}}

        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              {{{docContent}}}
            </div>
          </div>
        </div>

        <a href="#menu-toggle" id="menu-toggle">
          <i class="fa fa-caret-right" aria-hidden="true" id="toggle-arrow"></i>
          <span class="sr-only">(toggle menu on left)</span>
        </a>

        {{> footer}}
      </div>
    </div>

    {{> jsFooter}}

    <script>
      $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");

        $("#toggle-arrow").toggleClass("fa-caret-right");
        $("#toggle-arrow").toggleClass("fa-caret-left");
      });
    </script>
  </body>
</html>
